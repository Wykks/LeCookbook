{
  "name": "the-cookbook",
  "version": "1.0.0-alpha4",
  "author": "Wykks",
  "description": "A simple cookbook progressive web app",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration=base",
    "build:prod": "ng build --configuration=base,production",
    "test": "ng test --watch",
    "lint": "ng lint",
    "test:ci": "ng test --ci --silent",
    "commit": "lint-staged && git-cz --no-verify",
    "deploy": "yarn build && firebase deploy",
    "deploy:prod": "yarn build:prod && firebase --project prod deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "12.0.0",
    "@angular/cdk": "12.0.0",
    "@angular/common": "12.0.0",
    "@angular/core": "12.0.0",
    "@angular/fire": "6.1.4",
    "@angular/forms": "12.0.0",
    "@angular/platform-browser": "12.0.0",
    "@angular/platform-browser-dynamic": "12.0.0",
    "@angular/router": "12.0.0",
    "@angular/service-worker": "12.0.0",
    "@ionic/angular": "5.6.7",
    "core-js": "3.12.1",
    "cuid": "2.1.8",
    "date-fns": "2.21.3",
    "firebase": "8.6.1",
    "lodash-es": "4.17.21",
    "rxjs": "6.6.3",
    "tslib": "^2.2.0",
    "zone.js": "0.11.4"
  },
  "devDependencies": {
    "@angular-builders/jest": "11.2.0",
    "@angular-devkit/architect": "0.1200.0",
    "@angular-devkit/build-angular": "12.0.0",
    "@angular/cli": "12.0.0",
    "@angular/compiler": "12.0.0",
    "@angular/compiler-cli": "12.0.0",
    "@angular/language-service": "12.0.0",
    "@ngneat/spectator": "7.1.0",
    "@types/jasmine": "3.7.4",
    "@types/jasminewd2": "2.0.9",
    "@types/jest": "26.0.23",
    "@types/lodash": "4.14.169",
    "@types/node": "15.0.3",
    "codelyzer": "6.0.2",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "firebase-tools": "9.10.2",
    "fuzzy": "0.1.3",
    "husky": "4.3.0",
    "inquirer": "8.0.0",
    "inquirer-autocomplete-prompt": "1.3.0",
    "jasmine-core": "3.7.1",
    "jasmine-spec-reporter": "5.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.1",
    "ng-mocks": "12.0.0",
    "prettier": "2.3.0",
    "ts-node": "9.1.1",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.2.4",
    "typescript-tslint-plugin": "1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,md,ts,html}": "prettier --write",
    "!(functions)/**/*.ts": "tslint -c tslint.json -p tsconfig.app.json --fix"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
