{
  "name": "the-cookbook",
  "version": "1.0.0-alpha3",
  "author": "Wykks",
  "description": "A simple cookbook progressive web app",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration=base",
    "build:prod": "ng build --configuration=base,production",
    "test": "ng test --watch",
    "lint": "ng lint",
    "test:ci": "ng test --ci --silent",
    "commit": "lint-staged && git-cz --no-verify",
    "deploy": "yarn build && firebase deploy",
    "deploy:prod": "yarn build:prod && firebase --project prod deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "10.0.3",
    "@angular/cdk": "10.0.2",
    "@angular/common": "10.0.3",
    "@angular/core": "10.0.3",
    "@angular/fire": "6.0.2",
    "@angular/forms": "10.0.3",
    "@angular/platform-browser": "10.0.3",
    "@angular/platform-browser-dynamic": "10.0.3",
    "@angular/router": "10.0.3",
    "@angular/service-worker": "10.0.3",
    "@ionic/angular": "5.2.3",
    "core-js": "3.6.5",
    "cuid": "2.1.8",
    "date-fns": "2.14.0",
    "firebase": "7.16.0",
    "lodash-es": "4.17.15",
    "rxjs": "6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "0.10.3"
  },
  "devDependencies": {
    "@angular-builders/jest": "9.0.1",
    "@angular-devkit/architect": "0.1000.2",
    "@angular-devkit/build-angular": "0.1000.2",
    "@angular/cli": "10.0.2",
    "@angular/compiler": "10.0.3",
    "@angular/compiler-cli": "10.0.3",
    "@angular/language-service": "10.0.3",
    "@ngneat/spectator": "5.12.0",
    "@types/jasmine": "3.5.11",
    "@types/jasminewd2": "2.0.8",
    "@types/jest": "26.0.4",
    "@types/lodash": "4.14.157",
    "@types/node": "14.0.23",
    "codelyzer": "^6.0.0",
    "commitizen": "4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "firebase-tools": "8.5.0",
    "fuzzy": "0.1.3",
    "husky": "4.2.5",
    "inquirer": "7.3.2",
    "inquirer-autocomplete-prompt": "1.0.2",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.2",
    "jest": "26.1.0",
    "lint-staged": "10.2.11",
    "ng-mocks": "10.0.2",
    "prettier": "2.0.5",
    "ts-node": "8.10.2",
    "tslint": "~6.1.2",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.9.6",
    "typescript-tslint-plugin": "0.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,md,ts,html}": "prettier --write",
    "!(functions)/**/*.ts": "tslint -c tslint.json -p tsconfig.app.json --fix"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
