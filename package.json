{
  "name": "the-cookbook",
  "version": "1.0.0-alpha3",
  "author": "Wykks",
  "description": "A simple cookbook progressive web app",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration=base",
    "build:prod": "ng build --configuration=base,production",
    "test": "ng test --watch",
    "lint": "ng lint",
    "test:ci": "ng test --ci --silent",
    "commit": "lint-staged && git-cz --no-verify",
    "deploy": "yarn build && firebase deploy",
    "deploy:prod": "yarn build:prod && firebase --project prod deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "10.2.1",
    "@angular/cdk": "10.2.6",
    "@angular/common": "10.2.1",
    "@angular/core": "10.2.1",
    "@angular/fire": "6.0.4",
    "@angular/forms": "10.2.1",
    "@angular/platform-browser": "10.2.1",
    "@angular/platform-browser-dynamic": "10.2.1",
    "@angular/router": "10.2.1",
    "@angular/service-worker": "10.2.1",
    "@ionic/angular": "5.4.1",
    "core-js": "3.6.5",
    "cuid": "2.1.8",
    "date-fns": "2.16.1",
    "firebase": "8.0.0",
    "lodash-es": "4.17.15",
    "rxjs": "6.6.3",
    "tslib": "2.0.3",
    "zone.js": "0.10.3"
  },
  "devDependencies": {
    "@angular-builders/jest": "10.0.1",
    "@angular-devkit/architect": "0.1002.0",
    "@angular-devkit/build-angular": "0.1002.0",
    "@angular/cli": "10.2.0",
    "@angular/compiler": "10.2.1",
    "@angular/compiler-cli": "10.2.1",
    "@angular/language-service": "10.2.1",
    "@ngneat/spectator": "6.0.0",
    "@types/jasmine": "3.6.0",
    "@types/jasminewd2": "2.0.8",
    "@types/jest": "26.0.15",
    "@types/lodash": "4.14.164",
    "@types/node": "14.14.6",
    "codelyzer": "6.0.1",
    "commitizen": "4.2.2",
    "cz-conventional-changelog": "3.3.0",
    "firebase-tools": "8.14.1",
    "fuzzy": "0.1.3",
    "husky": "4.3.0",
    "inquirer": "7.3.3",
    "inquirer-autocomplete-prompt": "1.3.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~6.0.0",
    "jest": "26.6.1",
    "lint-staged": "10.5.1",
    "ng-mocks": "10.5.0",
    "prettier": "2.1.2",
    "ts-node": "9.0.0",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.0.5",
    "typescript-tslint-plugin": "0.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,md,ts,html}": "prettier --write",
    "!(functions)/**/*.ts": "tslint -c tslint.json -p tsconfig.app.json --fix"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
