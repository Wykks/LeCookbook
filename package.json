{
  "name": "simple-cookbook-app",
  "version": "0.0.1",
  "author": "Wykks",
  "homepage": "https://ionicframework.com/",
  "description": "An Ionic project",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod --no-progress",
    "test": "ng test --watch",
    "lint": "ng lint",
    "test:ci": "ng test --ci --silent",
    "commit": "lint-staged && git-cz --no-verify"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "9.1.3",
    "@angular/core": "9.1.3",
    "@angular/forms": "9.1.3",
    "@angular/platform-browser": "9.1.3",
    "@angular/platform-browser-dynamic": "9.1.3",
    "@angular/router": "9.1.3",
    "@ionic-native/core": "5.24.0",
    "@ionic-native/splash-screen": "5.24.0",
    "@ionic-native/status-bar": "5.24.0",
    "@ionic/angular": "5.0.7",
    "core-js": "3.6.5",
    "rxjs": "6.5.5",
    "tslib": "1.11.1",
    "zone.js": "0.10.3"
  },
  "devDependencies": {
    "@angular-builders/jest": "9.0.1",
    "@angular-devkit/build-angular": "0.901.3",
    "@angular/cli": "9.1.3",
    "@angular/compiler": "9.1.3",
    "@angular/compiler-cli": "9.1.3",
    "@angular/language-service": "9.1.3",
    "@ionic/angular-toolkit": "2.2.0",
    "@ngneat/spectator": "5.6.1",
    "@types/jasmine": "3.5.10",
    "@types/jasminewd2": "2.0.8",
    "@types/jest": "25.2.1",
    "@types/node": "13.13.4",
    "codelyzer": "5.2.2",
    "commitizen": "4.0.4",
    "cz-conventional-changelog": "3.1.0",
    "husky": "4.2.5",
    "jasmine-core": "3.5.0",
    "jasmine-spec-reporter": "5.0.2",
    "jest": "25.5.1",
    "lint-staged": "10.2.0",
    "ng-mocks": "9.2.0",
    "prettier": "2.0.5",
    "ts-node": "8.9.1",
    "tslint": "6.1.2",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.8.3",
    "typescript-tslint-plugin": "0.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,md,ts,html}": "prettier --write",
    "*.ts": "tslint -c tslint.json -p tsconfig.json --fix"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
